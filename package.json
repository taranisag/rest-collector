{
  "name": "rest-collector",
  "version": "1.0.5",
  "description": "Node.js and browser http library that allows you to merge data from multiple api endpoints",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "start": "npm run build && node dist/index.js",
    "test": "nyc mocha",
    "cover": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tsc --noEmit && eslint ./src/*.ts --quiet --fix"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "api",
    "rest",
    "merge",
    "collect",
    "http",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taranisag/rest-collector.git"
  },
  "bugs": {
    "url": "https://github.com/taranisag/rest-collector/issues"
  },
  "homepage": "https://github.com/taranisag/rest-collector#readme",
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/express": "4.17.0",
    "@types/mocha": "2.2.48",
    "@types/retry": "0.12.0",
    "@types/superagent": "4.1.1",
    "@typescript-eslint/eslint-plugin": "1.10.2",
    "@typescript-eslint/parser": "1.10.2",
    "body-parser": "1.18.3",
    "chai": "4.1.2",
    "coveralls": "^3.0.4",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-prettier": "3.1.0",
    "express": "4.16.4",
    "faker": "4.1.0",
    "mocha": "5.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "13.3.0",
    "prettier": "1.18.2",
    "source-map-support": "^0.5.12",
    "ts-node": "5.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.2"
  },
  "dependencies": {
    "p-retry": "4.1.0",
    "superagent": "5.0.8"
  }
}
